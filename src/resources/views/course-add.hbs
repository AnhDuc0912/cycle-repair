<!-- Typography Start -->
<div class="container-fluid pt-4 px-4">
    <form action="/course/store" method="post">
        <div class="row mb-3">
            <div class="col">
                <label for="name" class="form-label">Product Name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Chair">
            </div>
        </div>
        <div class="mb-3">
            <label for="supplier" class="form-label">Supplier</label>
            <select class="form-select" id="supplier">
                <option value="Supplier X">Supplier X</option>
                <option value="Supplier Y">Supplier Y</option>
                <option value="Supplier Z">Supplier Z</option>
            </select>
        </div>
        <div class="row mb-3">
            <div class="col">
                <label for="image" class="form-label">Image</label>
                <div class="input-group">
                    <span class="input-group-text image-icon">
                        <i class="bi bi-image"></i>
                    </span>
                    <input type="text" class="form-control" id="image" name="image">
                    {{!-- <input type="file" class="form-control" id="img" name="img" accept="image/*" placeholder="">
                    --}}
                </div>
            </div>
            <div class="col">

            </div>
        </div>

        <div class="row mb-5">
            <div class="col">
                <label for="status" class="form-label">Status</label>
                <select class="form-select" id="status">
                    <option value="In Stock">In Stock</option>
                    <option value="Out of Stock">Out of Stock</option>
                    <option value="Discontinued">Discontinued</option>
                </select>

            </div>
            <div class="col">
                <label for="price" class="form-label">Price</label>
                <input type="text" class="form-control" id="price" placeholder="200$">
            </div>
        </div>

        <div class="col mb-3">
            <label for="editor" class="form-label">Description</label>
            <textarea id="editor" name="description">

            </textarea>
        </div>

        <div class="row mb-2 text-end">
            <div class="col">
                <button type="submit" class="btn btn-success">Create</button>
            </div>
        </div>

    </form>
</div>
<!-- Typography End -->