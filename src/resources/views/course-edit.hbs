<!-- Typography Start -->
<div class="container-fluid pt-4 px-4">
    <form action="/course/{{ course._id }}?_method=PUT" method="post">
        <div class="row mb-3">
            <div class="col">
                <label for="productName" class="form-label">Product Name</label>
                <input type="text" class="form-control" id="productName" name="name" value="{{ course.name }}">
            </div>
        </div>

        <div class="row mb-3">
            <div class="col">
                <label for="img" class="form-label">Image</label>
                <div class="input-group">
                    <span class="input-group-text image-icon">
                        <i class="bi bi-image"></i>
                    </span>
                    <input type="file" class="form-control" id="img" accept="image/*" name="image">
                </div>
            </div>
            <div class="col">
                <img src="{{ course.image }}" alt="{{ course.name }}">
            </div>
        </div>

        <div class="row mb-3">
            <div class="col">
                <label for="status" class="form-label">Status</label>
                <select class="form-select" id="status">
                    <option value="In Stock">In Stock</option>
                    <option value="Out of Stock">Out of Stock</option>
                    <option value="Discontinued">Discontinued</option>
                </select>

            </div>
            <div class="col">
                <label for="price" class="form-label">Price</label>
                <input type="text" class="form-control" id="price" placeholder="200$">
            </div>
        </div>

        <div class="row mb-3">
        </div>

        <div class="row mb-3">
            <div class="col">
                <label for="editor" class="form-label">Description</label>
                <textarea id="editor" name="description">
                     {{ course.description }}
                </textarea>
            </div>
        </div>

        <div class="row mb-2 text-end">
            <div class="col">
                <button type="submit" class="btn btn-success">Update</button>
            </div>

        </div>

    </form>
</div>

<!-- Typography End -->